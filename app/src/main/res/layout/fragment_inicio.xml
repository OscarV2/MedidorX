<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.InicioFragment"
    android:layout_marginTop="50dp">

    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu"
        android:layout_marginStart="20sp"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/btn_menu_content_desc"/>

    <Button
        android:id="@+id/btnTanquear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80sp"
        android:layout_marginTop="40sp"
        android:text="@string/tanquear"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:paddingHorizontal="20dp"
        android:background="@drawable/redondeado"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="13dp"
        app:backgroundTint="@color/white"
        android:src="@drawable/ic_ubicacion" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fabUbicacion"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:src="@drawable/ic_ruta"
        app:backgroundTint="@color/white" />

</RelativeLayout>